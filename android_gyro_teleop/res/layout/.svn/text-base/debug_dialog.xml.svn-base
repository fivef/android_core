<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"

    android:orientation="horizontal" 
    android:gravity="right" android:layout_marginBottom="10dp">
    		
    		
    		<LinearLayout android:layout_height="match_parent" android:layout_width="fill_parent" android:layout_weight="1" android:orientation="vertical">
            
	    		<com.tokaracamara.android.verticalslidevar.VerticalProgressBar
					android:id="@+id/LeftForwardBar"
				    android:progressDrawable="@drawable/progress_vertical"
				    android:layout_height="fill_parent" android:layout_width="fill_parent" android:max="255" android:progress="20" android:layout_weight="1"/>
				    
				<com.tokaracamara.android.verticalslidevar.VerticalProgressBarTopDown 
				    android:id="@+id/LeftBackwardBar"
				    android:progressDrawable="@drawable/progress_vertical"
				    android:layout_height="fill_parent" android:layout_width="fill_parent" android:max="255" android:progress="20" android:layout_weight="1"/>
		                
            </LinearLayout>
            
            <LinearLayout android:layout_height="match_parent" android:layout_width="70dp" android:orientation="vertical" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            
            		<!-- Main -->
    			<TextView  
					android:id="@+id/xValue"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    
			    />
    
	    
				<TextView  
					android:id="@+id/yValue"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				   
				/>
				    
				<TextView  
					android:id="@+id/zValue"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				
				/>
				
				<TextView  
					android:id="@+id/roll"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				  
				/>
				
				<TextView  
					android:id="@+id/pitch"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				
				/>
                
            </LinearLayout>
            
          	<LinearLayout android:layout_height="match_parent" android:layout_width="fill_parent" android:layout_weight="1" android:orientation="vertical">
            
    				 <com.tokaracamara.android.verticalslidevar.VerticalProgressBar
						android:id="@+id/RightForwardBar"
					    android:progressDrawable="@drawable/progress_vertical"
					    android:layout_height="fill_parent" android:layout_width="fill_parent" android:max="255" android:progress="20" android:layout_weight="1"/>

  			    
					<com.tokaracamara.android.verticalslidevar.VerticalProgressBarTopDown 
					    android:id="@+id/RightBackwardBar"
					    android:progressDrawable="@drawable/progress_vertical"
					    android:layout_height="fill_parent" android:layout_width="fill_parent" android:max="255" android:progress="20" android:layout_weight="1"/>
			  
			  
                
            </LinearLayout>

    
</LinearLayout>